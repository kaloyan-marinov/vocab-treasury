{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[new way] Python: Flask",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "flask",
      "env": {
        "FLASK_APP": "src",
        // TODO: (2024/03/15, 05:57)
        //       update the following line
        //       according to the following deprecation warning:
        //       ```
        //       'FLASK_ENV' is deprecated and will not be used in Flask 2.3. Use 'FLASK_DEBUG' instead.
        //       ```
        "FLASK_ENV": "development"
      },
      "args": ["run", "--no-debugger"],
      "jinja": true
    },
    {
      "name": "[old way] Python: Flask",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "run_dev_server",
      "env": {
        "FLASK_ENV": "development"
      },
      "jinja": true,
      "justMyCode": false
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "env": {
        "CONFIGURATION_4_BACKEND": "development",
        "PYTHONPATH": "."
      },
      "cwd": "${workspaceFolder}/backend",
      "program": "${file}",
      "args": [
        "--time-to-sleep", "5"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Node.js: React",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "start"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Brave against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/src",

      "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
      "runtimeArgs": [ "--remote-debugging-port=9222" ]
    },
    {
      "name": "Debug CRA Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "env": {
        "CI": "true"
      },
      "runtimeExecutable": "${workspaceRoot}/frontend/node_modules/.bin/react-scripts",
      "args": [
        "test",
        "--runInBand",
        "--no-cache",
        "--watchAll=false"
      ],
      // "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen" //,
      // "disableOptimisticBPs": true
    }
  ]
}
